{
	"name": "sparkbot",
	"version": "0.1.0",
	"description": "A lightning-fast Discord bot framework with advanced features designed to make development effortless.",
	"author": "Brian Lister <brian@sparkforge.dev (http://sparkforge.dev/)",
	"license": "MIT",
	"type": "module",
	"scripts": {
		"lint": "prettier --write . && xo && markdownlint-cli2 .",
		"commit": "lint-staged",
		"prepare": "husky"
	},
	"lint-staged": {
		"*.ts": [
			"prettier --write",
			"xo"
		],
		"*.md": [
			"prettier --write",
			"markdownlint-cli2"
		]
	},
	"dependencies": {
		"@sparkbot/logger-console": "latest",
		"@sparkbot/logger-plugin-interface": "latest",
		"@sparkbot/secrets-environment": "latest",
		"@sparkbot/secrets-plugin-interface": "latest",
		"cron": "^3.1.7",
		"discord.js": "^14.15.1",
		"luxon": "^3.4.4",
		"valibot": "^0.30.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.2.1",
		"@commitlint/config-conventional": "^19.1.0",
		"@types/bun": "latest",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.2",
		"markdownlint-cli2": "^0.13.0",
		"prettier": "^3.2.5",
		"xo": "^0.58.0"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	}
}
